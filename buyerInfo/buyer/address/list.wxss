/* pages/buyer/address/list.wxss */
page{
  background: #F4F4F4; 
}
.address-info{
  padding-bottom: 100rpx;
  background: #F4F4F4;
}
.address {
  height: 100%;
  min-height: 100%;
  position: relative;
  padding-bottom: 100rpx;
  border-top: 2rpx solid #F4F4F4;
}
.empty-address{
  overflow: hidden;
	text-align: center;
}
.empty-address image{
  width: 442rpx;
  height: 355rpx;
  margin-top: 140rpx;
}
.empty-address view{
  font-size: 30rpx;
  margin-top: 30rpx;
  color: #999999;
  line-height: 38rpx;
}
/* 列表 */
.address-list {
  width: 100%;
  padding: 0 26rpx;
  box-sizing: border-box;
  background: white;
  border-bottom: 1rpx solid #F4F4F4;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.clearfix:before,
.clearfix:after {
    display: table;
    content: " ";
}
.clearfix:after {
    clear: both;
}
.clearfix{
    zoom: 1;
}
/* 按钮 */
.edit-list{
  width: 64rpx;
}
.edit-list icon{
  font-size: 38rpx;
}
.selected{
  color: #FF6454;
}
/* 地址信息 */
.user-info {
  flex: 1;
  min-height: 210rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.user-info-top {
  font-size: 30rpx;
  overflow: hidden;
  margin-top: 42rpx;
  line-height: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}
.user-info-top .default-text {
  color: #FB453A;
  margin-left: 16rpx;
  width: 87rpx;
  height: 38rpx;
  border: 2rpx solid rgba(251,69,58,1);
  border-radius: 8rpx;
  text-align: center;
  line-height: 36rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  display: inline-block;
}
.user-info-top .user-phone {
  font-size: 26rpx;
  color: #979797;
  margin-left: 16rpx;
}
.user-info-bottom {
  margin-top: 26rpx;
  padding-bottom: 40rpx;
}
.user-info-bottom view {
  overflow: hidden;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  word-break: break-all;
}
/* 编辑icon */
.adddress-edit{
  width: 92rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  color: #979797;
  white-space: nowrap;
  position: relative
}
.adddress-edit::before{
  content: '';
  position: absolute;
  left: -30rpx;
  top: -6rpx;
  width: 2rpx ;
  height: 50rpx;
  background: #cccccc;
}
.adddress-edit icon{
  font-size: 32rpx;
  padding-left: 10rpx;
  margin-top: -10rpx;
}
.edit-btn{
  width: 100%;
  height: 90rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.edit-btn view{
  float: right;
  width: 120rpx;
  height: 88rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  text-align: center;
}
/* 新建 删除 */
.delete-btn{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.delete-btn>button{
  width: 686rpx;
  height: 80rpx;
  margin: 20rpx auto 0;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #333333;
  border-radius: 50rpx;
  background: #FFD339;
}
.delete-btn .is-delete{
  width: 700rpx;
  height: 80rpx;
  margin: 20rpx auto 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.is-delete>.icon-box{
  color: #040400;
}
.icon-box>text{
  font-size: 28rpx;
}
.icon-box>.iconfont{
  font-size: 38rpx;
  margin-right: 10rpx;
  transform: translateY(4rpx);
}
.is-delete > button {
  width: 190rpx;
  height: 66rpx;
  border:1px solid rgba(242,55,25,1);
  border-radius: 40rpx;
  color: #F23719;
  text-align: center;
  line-height: 66rpx;
  font-size: 30rpx;
  margin: 0;
}
.content{
  width: 100%;
}
.add-btn{
  width: 422rpx;
  height: 83rpx;
  margin: 20rpx auto 0;
  text-align: center;
  line-height: 83rpx!important;
  font-size: 32rpx;
  color: #333333!important;
  border-radius: 50rpx;
  background: #FFD339;
}
.delete-btn button::after{
  border: none!important;
}
.add-text{
  font-size: 24rpx;
  color: #666;
  margin-top: 0;
  margin-bottom: 90rpx;
}