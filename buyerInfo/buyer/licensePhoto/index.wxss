.container {
  width: 100%;
  min-height: 100vh;
  padding-bottom: 98rpx;
  background-color: #F5F7FA;
  position: relative;
  box-sizing: border-box;
}
.image-area {
  width: 100%;
}
.image-item {
  width: 100%;
  position: relative;
}
.image-item image:first-child {
  width: 100%;
  height: auto;
  background: #666;
}
.image-item image:nth-child(2) {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  z-index: 10;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  display: flex;
  z-index: 20;
  color: #333;
  font-size: 32rpx;
  background: #fff;
}
.bottom .add {
  width: 50%;
  position: relative;
}
.bottom .add image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
.bottom .save {
  width: 50%;
  text-align: center;
  line-height: 98rpx;
  background: #ffd339;
}
.upload {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add .van-uploader {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}