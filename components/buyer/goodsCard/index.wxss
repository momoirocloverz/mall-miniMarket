.goods-card{
  display: inline-block;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  width: 335rpx;
  height: 426rpx;
  position: relative;
  box-shadow: -1px 2px 8px 0px rgba(12,1,0,0.13);
  line-height: 0;
}
.goods-card .img-box {
  width: 335rpx;
  height: 251rpx;
  border-radius: 16rpx 16rpx 0 0;
  position: relative;
  overflow: hidden;
}
.goods-card .img-box .goods-image {
  width: 335rpx;
  height: 251rpx;
}
.goods-card .img-box .poster {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.45);
  position: absolute;
  top: 0;
}
.goods-card .img-box .no-count {
  width: 131rpx;
  height: 131rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.goods-card .goods-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color:#333333;
  font-size:28rpx;
  font-family:SourceHanSansCN-Regular,SourceHanSansCN;
  min-height: 70rpx;
  line-height: 35rpx;
  padding: 0 18rpx;
  margin-top: 20rpx;
}
.goods-price {
  color: #FB453A;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold,PingFang SC;
  display: inline-block;
}
