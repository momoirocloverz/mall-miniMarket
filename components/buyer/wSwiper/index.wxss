/* components/wSwiper/index.wxss */
swiper{
  position: relative;
  overflow: hidden;
}
swiper image{
  width:100%;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.progress{
  background:rgba(0, 0, 0, .2);
  color:#fff;
  position: absolute;
  right:30rpx;
  top:400rpx;
  width:56rpx;
  height:56rpx;
  border-radius:50%;
  z-index:100;
  display: flex;
  align-items:center;
  justify-content:center;
  font-size:28rpx;
}
.progress text{
  font-size:22rpx;
  transform: translateY(2rpx)
}