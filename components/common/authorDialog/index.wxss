.author-dialog {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 999;
}
.content {
  width: 540rpx;
  overflow: hidden;
  border-radius: 10rpx;
  background: #fff;
  position: relative;
  margin: 50% auto 0;
  padding-bottom: 90rpx;
}
.button {
  height: 86rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #ddd;
}
.button view {
  width: 100%;
  text-align: center;
  line-height: 86rpx;
  font-size:28rpx;
  color: #333;
  font-family:PingFang SC;
}
.button view:nth-of-type(1) {
  border-right: 1rpx solid #ddd;
}
.button view button {
  padding: 0;
  width: 100%!important;
  background: transparent!important;
  font-size:28rpx;
  color: #007AFF;
  font-family:PingFang SC;
  font-weight:bold;
  border: 0;
}
.button view button::after {
  border: 0!important;
}

.title {
  font-size:36rpx;
  color: #333;
  font-family:PingFang SC;
  font-weight:bold;
  line-height: 36rpx;
  text-align: center;
  margin-top: 39rpx;
}
.explain {
  font-size:28rpx;
  color: #333;
  font-family:PingFang SC;
  padding: 0 90rpx;
  line-height: 40rpx;
  text-align: center;
  margin: 40rpx auto 30rpx;
}
