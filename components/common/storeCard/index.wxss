/* components/buyer/storeCard/index.wxss */
.store-card{
  display: block;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  height: 144rpx;
  box-sizing: border-box;
  box-shadow: -1px 2px 8px 0 rgba(12,1,0,0.13); 
  padding: 30rpx;
  overflow: hidden;
}
.store-card .store-info {
  display: flex;
  flex-direction: row;
  position: relative;
}
.store-card .store-info .store-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.store-card .store-info .store-title{
  display: flex;
  flex: auto;
  flex-direction: column;
}
.store-card .store-info .store-title-text {
  padding: 0 12rpx 14rpx;
  font-weight: 700;
  font-size: 26rpx;
  color: #222222;
}
.store-card .store-info .store-title-desc {
  padding-left: 12rpx;
  font-weight: Regular;
  font-size: 24rpx;
  color: #666666;
}
