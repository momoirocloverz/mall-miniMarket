.store-card .store-info  .store-more {
  font-size: 26rpx;
  font-weight: bold;
  color: #DCDCDC;
  height: 84rpx;
  line-height: 84rpx;
}
.go-store {
  line-height: 84rpx;
  margin-right: 10rpx;
  color: #FB7C01;
}
.collection {
  position: absolute;
  background-color: #FB7C01;
  font-size: 24rpx;
  line-height: 24rpx;
  width: 70rpx;
  height: 144rpx;
  top: -30rpx;
  right: -30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  transition: width 0.2s ease-out, opacity 0.2s ease-in, visibility 0.2s ease-in;
}
.collection .text {
  text-align: center;
  color: #FFF;
}
.display-none {
  width: 0;
  opacity: 0;
  transition: width 0.2s ease-out;
}