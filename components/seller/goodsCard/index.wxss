.goods-card{
  display: inline-block;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  width: 335rpx;
  height: 426rpx;
  position: relative;
  box-shadow: -1px 2px 8px 0px rgba(12,1,0,0.13); 
}
.goods-card .goods-image{
  width: 335rpx;
  height: 251rpx;
  border-radius:16rpx 16rpx 0 0;
}
.goods-card .goods-title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color:#333333;
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular,SourceHanSansCN;
  box-sizing:border-box;
  min-height: 70rpx;
  line-height: 36rpx;
  padding: 0 26rpx;
}
.goods-price{
  color: #FB453A;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold,PingFang SC;
  display: inline-block;
  margin-left: 29rpx;
}
.goods-tag {
  color: #FB453A;
  font-size: 22rpx;
  display: inline-block;
  height: 38rpx;
  line-height: 38rpx;
  padding: 0 6rpx;
  margin-left: 6rpx;
  border-radius: 6rpx;
  border: 2rpx solid #FB453A;
  overflow: hidden;
}
.price-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  width:100%;
}
.market-price {
  font-size: 24rpx;
  color: #999999;
  display: inline-block;
}
.add-shopcart{
  width: 46rpx;
  height: 46rpx;
  margin-right: 22rpx;
}