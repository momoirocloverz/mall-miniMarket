/* pages/buyer/shopcart/index.wxss */
.container {
  display: block;
  width: 100%;
  min-height: 100%;
  background: #F5F7FA;
  position: absolute;
  left: 0;
  top: 0;
}
/* 编辑栏 */
.editWrap{
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #f4f4f4;
  position: fixed;
  z-index:99;
  background: #fff;
}
.editWrap text{
  float: right;
  line-height: 88rpx;
  color: #3c3c3c;
  margin-right: 26rpx;
  font-size: 30rpx;
}
/* 商品详情 */
.goods-info {
  padding: 100rpx 30rpx 200rpx;
}
.goods-list {
  overflow: hidden;
  padding: 0 26rpx;
  height: 220rpx;
  display: flex;
  align-items: center;
  background: #fff;
  margin-top: 16rpx;
  box-shadow: 2px -1px 4px 0px rgba(12,1,0,0.03); 
  border-radius: 16rpx;
} 
.goods-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.goods-img {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 20rpx 0 18rpx;
}
.goods-img .count-warning-tag {
  width: 100rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.8);
  text-align: center;
  line-height: 40rpx;
  border-radius: 10rpx 0 10rpx 0;
  color: #fff;
  font-size: 22rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.goods-img image {
  width: 100%;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.goods-info-up {
  align-self: flex-start;
}
.goods-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  max-height: 76rpx;
  line-height: 38rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.count-warning {
  font-size: 26rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  color: #F11D09;
}
.goods-info-down {
  /* align-self: flex-end; */
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods-num-cont {
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}
.goods-price {
  font-size: 32rpx;
  color: #fb453a;
  font-family: Arial;
  font-weight: 600;
}
.goods-num {
  font-size: 26rpx;
  color: #999;
}
.delete-btn{
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
}
/* 选择 */
.select-btn{
  width: 38rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
}
.seleted-btn{
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}
.select-btn view icon{
  font-size: 38rpx;
  color: #999;
}
.select-goods {
  display: flex;
  flex: 1;
}
/* 底部操作栏 */
.controls {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  height: 110rpx;
  box-sizing: border-box;
  box-shadow: 0 0 6rpx rgba(193, 193, 193, 0.5);
  display: flex;
  align-items: center;
}
.controls-select {
  margin-left: 26rpx;
  display: flex;
  align-items: center;
}
.controls-select icon{
  font-size: 38rpx;
  margin-right: 10rpx;
  display: flex;
}
.controls-select text{
  font-size: 28rpx;
  color: #999999;
}
.selected{
  color: #26826D;
}
.controls-price {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  text-align: right;
  font-size: 28rpx;
  color: #222222;
}
.controls-total{
  color: #fb453a;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
}
.settlement {
  float: right;
  min-width: 123rpx;
  padding: 0 20rpx;
  height: 62rpx;
  background: linear-gradient(-89deg,#ffd101, #ffd101);
  text-align: center;
  line-height: 62rpx;
  color: #333333;
  font-size: 32rpx;
  border-radius: 42rpx;
  margin: 0 26rpx 0 auto;
}
.controls-prom{
  display: block;
  color: #8e8e8e;
  font-size: 26rpx;
  height: 32rpx;
  line-height: 32rpx;
}
.empty-lose {
  float: right;
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border: 1rpx solid #979797;
  color: #3c3c3c;
  font-size: 26rpx;
  margin: 20rpx 10rpx 0 0;
  border-radius: 100rpx;
}
.controls-delete {
  width: 149rpx;
  height: 58rpx;
  border:1px solid #f5441e;
  border-radius: 100rpx;
  margin: 0 26rpx 0 auto;
  text-align: center;
  line-height: 58rpx;
  color: #f5441e;
  font-size: 32rpx;
}
.go-btn {
  width: 198rpx;
  height: 60rpx;
  border: 1rpx solid #FF763F;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  color: #FF763F;
  font-size: 24rpx;
  display: block;
  margin: 0 auto;
}
