.poster {
  height: 100vh;
  overflow: hidden;
  position: relative;
}
.poste_box {
  width: 100%;
  background: #fff;
}
.save-btn {
  margin: 30rpx auto 0;
}
.bottom {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 180rpx;
  /* height: 15vh; */
  display: flex;
  align-items: center;
  background: #fff;
}
.share-btn {
  width: 100%;
  text-align: center;
  background: #fff;
  line-height: 0;
}
.share-btn:after,.share-btn:before{
  padding: 0px;
  margin: 0px;
}
button{
  padding: 0px;
}
.share-btn image {
  width: 100rpx;
  height: 100rpx;
}
.share-btn view {
  font-size:30rpx;
  font-family:PingFang SC;
  color:#3c3c3c;
  line-height: 30rpx;
  margin-top: 26rpx;
}
.btn-hover {
  background: transparent !important;
}
.poster-img {
  width: 100%;
  height: 1028rpx;
}