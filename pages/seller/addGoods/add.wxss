.container {
  min-height: 100vh;
  padding-bottom: 50rpx;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  background-color: #F5F7FA;
}
.goods-head {
  width: 100%;
  /* min-height: 455rpx; */
  min-height: 292rpx;
  padding: 34rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}
.goods-head .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-head .name {
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
}
.goods-head .number {
  color: #666;
  font-size: 28rpx;
  font-weight: 400;
}
.main-image-title {
  display: flex;
  padding-top: 30rpx;
  flex-direction: row;
  justify-content: space-between;
}
.main-image-title .goods-icon {
  color: #ccc;
  /* font-weight: 700; */
}
.main-image-title .goods-icon image {
  width: 14rpx;
  height: 24rpx;
  margin-left: 15rpx;
}
.image-out-container {
  width: 100%;
}
.title-text {
  padding-top: 30rpx;
  width: 100%;
  font-size: 30rpx;
}
.line {
  width: 100%;
  height: 1rpx;
  background: #f5f7fa;
  margin: 35rpx 0 5rpx 0;
}
.goodsImage {
  /* min-height: 220rpx; */
  min-height: 50rpx;
}
.goods-images-flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  /* border-bottom: 1rpx solid #f5imagef7fa; */
}
.goods-images-flex .goods-icon image {
  width: 14rpx;
  height: 24rpx;
  margin-left: 15rpx;
}
.add-image {
  display: flex;
  flex-wrap: wrap;
}
.image-item {
  margin-right: 10rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 5rpx;
  background: #f1f1f1;
  margin-bottom: 10rpx;
  position: relative;
}
.add-image image:nth-child(1) {
  width: 100%;
  height: 100%;
}
.add-image image:nth-child(2) {
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  right: -10rpx;
  top: -10rpx;
  z-index: 10;
}
.add-image .image-item:nth-child(3n) {
  margin-right: 0;
}
.add-area {
  width: 210rpx;
  height: 210rpx;
  background: url('https://img.hzanchu.com/acimg/d5fce742893a74f4584f311fc369f1ea.png') no-repeat;
  background-position: center;
  background-size: 100% 100%;
}
.van-uploader__preview image {
  width: 210rpx !important;
  height: 210rpx !important;
  border-radius: 10rpx !important;
}
.goods-body {
  width: 100%;
  margin-top: 20rpx;
}
.goods-body .cont {
  width: 100%;
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.goods-body .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 98rpx;
  line-height: 98rpx;
  width: 100%;
  border-bottom: 1rpx solid #f5f7fa;
}
.goods-body .item:last-child {
  border-bottom: none;
}
.goods-body .item label {
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
  margin-right: 20rpx;
  white-space: nowrap;
}
.goods-body .item input {
  flex: 1;
  text-align: right;
}
.goods-body .item view {
  display: flex;
  align-items: center;
  color: #ccc;
  font-size: 30rpx;
  width: 400rpx;
}
.goods-body .item text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: right;
}
.goods-body .item image {
  width: 14rpx;
  height: 24rpx;
  margin-left: 15rpx;
}
.release {
  width: 550rpx;
  height: 88rpx;
  margin: 50rpx auto 0 auto;
}
.release button {
  width: 100%;
  height: 100%;
  background: #FFD339;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  line-height: 88rpx;
  border-radius: 88rpx;
}
.van-uploader__preview:nth-child(3n) {
  margin-right: 0 !important;
}
.padding-name{
  padding-bottom: 30rpx;
}
.van-uploader__upload {
  width: 220rpx !important;
  height: 220rpx !important;
}

.flexac {
  display: flex;
  align-items: center;
}

.flexjc {
  display: flex;
  justify-content: center;
}

.flexjac {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.popup-bar {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #1677ff;
  font-size: 32rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.itemtwo {
  width: 100%;
  border-bottom: 1rpx solid #f5f7fa;
}
.itemtwo view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 98rpx;
  line-height: 98rpx;
  width: 100%;
  color: #333;
  font-size: 30rpx;
}
.itemtwo textarea {
  height: 120rpx;
  line-height: 40rpx;
}
.placeholder-textarea {
  color:#ccc;
  font-size: 30rpx;
  line-height: 40rpx;
}