.container {
  width: 100%;
  min-height: 100vh;
  background: #F5F7FA;
  overflow: hidden;
}
.amount {
  height: 113rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  background: #fff;
  box-shadow: 0 0 12rpx 0 rgba(12,1,0,0.13); 
  border-radius: 10rpx;
  padding: 0 29rpx;
  box-sizing: border-box;
  width: 690rpx;
  margin: 20rpx auto 0;
}
.amount text:last-child {
  font-size: 40rpx;
  font-weight: 600;
  color: #F76925;
}
