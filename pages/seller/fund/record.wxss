.list {
  overflow: hidden;
}
.item {
  width: 630rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 0 12rpx 0 rgba(12,1,0,0.13); 
  border-radius: 10rpx;
  margin: 20rpx auto 0;
  padding: 0 30rpx 39rpx;
}
.line-one {
  height: 38rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  color: #333;
  justify-content: space-between;
  margin-top: 38rpx;
}
.line-two {
  height: 38rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  color: #333;
  justify-content: space-between;
  margin-top: 28rpx;
}
.line-two text:nth-of-type(2) {
  color: #F76925;
  font-weight: 500;
}
.line-three {
  font-size: 28rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  color: #F76925;
  line-height: 38rpx;
  margin-top: 28rpx;
}
.line-four {
  font-size: 26rpx;
  color: #999;
  line-height: 38rpx;
  margin-top: 30rpx;
}