.container {
  width: 100%;
  min-height: 100vh;
  background: #F5F7FA;
  box-sizing: border-box;
}
.good-card {
  width: 100%;
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  margin-top: 25rpx;
  position: relative;
}
.good-image {
  width: 215rpx;
  height: 215rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 30rpx;
}
.good-image image {
  width: 100%;
  height: 100%;
}
.good-content {
  flex: 1;
}
.good-content .title {
  width: 440rpx;
  min-height: 68rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 38rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  word-break: break-all;
}
.buy-msg {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.buy-msg .price {
  font-size: 32rpx;
  color: #F51818;
  font-weight: 500;
}
.buy-msg .store {
  font-size: 30rpx;
  color: #999;
  font-weight: 400;
}
.operation-btn {
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
}
.operation-btn .delete {
  width: 139rpx;
  height: 60rpx;
  border: 1rpx solid #666;
  border-radius: 10rpx;
  text-align: center;
  line-height: 58rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #666;
  margin-right: 30rpx;
}
.operation-btn .edit {
  width: 139rpx;
  height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #333;
  background: #FFD339;
}
.van-icon-arrow-left {
  color: #333333!important;
  font-size: 36rpx;
}
.van-nav-bar {
  padding-bottom: 4rpx !important;
  padding-top: 52rpx !important;
}
.van-nav-bar__title {
  display: flex !important;
  justify-content: center !important;
}
.van-icon-arrow-left {
  font-size: 25px !important;
  margin-left: -20rpx !important;
}
.van-nav-bar {
  padding-top: 0 !important;
  width: 100vw !important;
  position: relative !important;
}
.van-hairline--bottom::after {
  border: none !important;
}
/* 导航 */
.head-box {
  width: 100%;
  height: 80rpx;
  padding-top: 44rpx;
  padding-bottom: 1.5vh;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.head-back {
  position: absolute;
  left: 33rpx;
  bottom: 2.8vh;
  z-index: 10;
  width: 20rpx;
  height: 36rpx;
}
.head-back image {
  width: 20rpx;
  height: 36rpx;
}
.head-btn {
  width: 320rpx;
  height: 60rpx;
  display: flex;
  border-radius: 10rpx;
  border: 1rpx solid #ffd339;
  overflow: hidden;
}
.head-btn navigator  {
  flex: 1;
}
.head-btn view {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}
.head-btn .checked {
  background: #FFD339;
}
/* 分类 */
.list-tops{
  width:100%;
  position: fixed;
  top: 0rpx;
  background:#fff;
  z-index:100;
}
.tab-nav{
  height:80rpx;
  display: flex;
  align-items: center;
  btab-bottom:2rpx solid #efefef;
}
.tab-nav-item{
  flex:1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
  height:100%;
  position: relative;
}
.tab-nav-item view{
  background:#FFD339;
  width:72rpx;
  height:6rpx;
  position: absolute;
  left:50%;
  bottom:0;
  margin-left:-36rpx;
}