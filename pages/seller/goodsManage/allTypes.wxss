.goods-type {
  width: 100%;
  min-height: 100vh;
  background: #F5F7FA;
  box-sizing: border-box;
}
.type-list {
  width: 100%;
  background: #fff;
  margin-top: 4rpx;
  padding: 0 30rpx 120rpx;
  box-sizing: border-box;
}
.type-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 98rpx;
  border-bottom: 1rpx solid #F5F7FA;
}
.type-item:last-child {
  border-bottom: none;
}
.type-item .name {
  font-size: 30rpx;
  color: #333;
}
.item-content {
  display: flex;
  align-items: center;
}
.item-content .number {
  color: #666;
  font-size: 30rpx;
  margin-right: 10rpx;
}
.item-opration {
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}
.item-opration text:last-child {
  color: #F51818;
  margin-left: 40rpx;
}
.delete-title {
  width: 100%;
  height: 143rpx;
  line-height: 143rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}
.delete-title text {
  color: #F51818;
}
.footer {
  position: fixed;
  width: 100%;
  height: 96rpx;
  left: 0;
  bottom: 0;
  z-index: 100;
  background: #FAFBFD;
  color: #333;
  font-size: 32rpx;
}
.no-edit {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.is-edit {
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 96rpx;
  background: #fff;
  box-shadow: 0 0 20rpx 10rpx rgba(0,0,0,0.02); 
}
.footer .manage {
  width: 50%;
  text-align: center;
  line-height: 96rpx;
}
.footer .add {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFD339;
}
.add-icon {
  margin-right: 10rpx;
  margin-top: 5rpx;
}
.dialog-content {
  width: 580rpx;
  height: 80rpx;
  padding: 0 21rpx;
  margin: 20rpx auto 47rpx auto;
  border: 1rpx solid #cccccc;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.van-icon-arrow-left {
  color: #333333!important;
  font-size: 36rpx;
}
.van-nav-bar {
  padding-bottom: 4rpx !important;
  padding-top: 52rpx !important;
}
.van-nav-bar__title {
  display: flex !important;
  justify-content: center !important;
}
.van-icon-arrow-left {
  font-size: 25px !important;
  margin-left: -20rpx !important;
}
.van-nav-bar {
  padding-top: 0 !important;
  width: 100vw !important;
  position: relative !important;
}
.van-hairline--bottom::after {
  border: none !important;
}
/* 导航 */
.head-box {
  width: 100%;
  height: 80rpx;
  padding-top: 44rpx;
  padding-bottom: 1.5vh;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.head-back {
  position: absolute;
  left: 33rpx;
  bottom: 2.8vh;
  z-index: 10;
  width: 20rpx;
  height: 36rpx;
}
.head-back image {
  width: 20rpx;
  height: 36rpx;
}
.head-btn {
  width: 320rpx;
  height: 60rpx;
  display: flex;
  border-radius: 10rpx;
  border: 1rpx solid #ffd339;
  overflow: hidden;
}
.head-btn navigator  {
  flex: 1;
}
.head-btn view {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}
.head-btn .checked {
  background: #FFD339;
}