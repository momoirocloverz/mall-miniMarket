/**index.wxss**/
.container {
  min-height: 100vh;
  width: 100%;
  background-color: #fff;
  position: relative;
  overflow-x: hidden;
  background-image: url('https://img.hzanchu.com/acimg/ccafbf088e0b1c7e9f17633e3938f35c.png');
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100% auto;
}
.head-area {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
}
.store-area {
  width: 690rpx;
  height: 290rpx;
  background: #fff;
  box-shadow: 1rpx 5rpx 10rpx 10rpx rgba(7,8,7,0.04); 
  border-radius: 20rpx;
  margin: 0 auto;
  padding: 30rpx 20rpx 0 30rpx;
  box-sizing: border-box;
}
.store-msg {
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.store-basic-msg {
  display: flex;
  align-items: center;
}
.store-basic-msg image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 21rpx;
}
.store-basic-msg text {
  color: #333;
  font-size: 40rpx;
  font-weight: bolder;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.share-store {
  margin: 0;
  padding: 0;
  border: none;
  background: transparent;
  width: 209rpx;
  height: 83rpx;
  line-height: 0;
  margin-top: 12rpx;
}
.btn-hover {
  background: transparent !important;
}
.share-store::after {
  border: none;
}
.share-store image {
  width: 100%;
  height: 100%;
}
.store-data {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.store-data view {
  flex: 1;
}
.store-data text {
  display: block;
  text-align: center;
  color: #333;
  font-size: 36rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
}
.store-data .data-name {
  color: #999;
  font-size: 26rpx;
}
.store-entrance {
  width: 100%;
  padding: 0 54rpx;
  margin-top: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.store-entrance .item {
  width: 25%;
  text-align: center;
  position: relative;
  line-height: 0;
}
.store-entrance image {
  width: 110rpx;
  height: 110rpx;
}
.store-entrance text {
  display: block;
  text-align: center;
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: 400;
  color: #333;
  letter-spacing: 2rpx;
  margin-bottom: 50rpx;
}
.store-entrance .tip {
  position: absolute;
  right: 28rpx;
  top: 6rpx;
  width: 48rpx;
  height: 30rpx;
  background: red;
  border-radius: 30rpx;
  text-align: center;
  line-height: 28rpx;
  color: #fff;
  font-size: 22rpx;
}
/* 引导图 */
.lay-wrapper image{
  margin: 0 auto;

}
.share-wrap{
  padding: 532rpx 0 172rpx;
}
.share-tip{
  display: block;
  margin: 0 auto;
  width: 442rpx;
  height: 252rpx;
}
.close-tip{
  display: block;
  margin: 0 auto;
  width: 236rpx;
  height: 101rpx;
}