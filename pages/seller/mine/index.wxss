/* pages/buyer/mine/index.wxss */
.mine-page{
  min-height: 100vh;
  width: 100%;
  background-color: #F5F7FA;
  position: relative;
  overflow-x: hidden;
  background-image: url('https://img.hzanchu.com/acimg/d136d4ec2a1f997ff75ebe8505a291bc.png');
  background-repeat: no-repeat;
  background-position: top;
  background-size: 100% auto;
}
.head-area {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
  margin-top: 67rpx;
  margin-bottom: 39rpx;
}
.mine-bg{
  overflow: hidden;
}
.mine-content{
  width: 100%;
  height: 210rpx;
  padding-top: 26rpx;
  box-sizing: border-box;
  position: relative;
}
.mine-head{
  width: 100%;
  padding: 0 30rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.mine-head--bg{
  width: 100%;
  height: 250rpx;
}
.mine-head .header{
  width: 114rpx;
  height: 114rpx;
  display: block;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-sizing: border-box;
}
.mine-head--info{
  margin-left: 33rpx;
  overflow: hidden;
}
.mine-head--name{
  width: 100%;
  font-size: 40rpx;
  color: #333;
}
.mine-head--entry{
  font-size:30rpx;
  font-weight: bold;
  color: #fff;
}
.mine-head--entry>.iconfont{
  margin-left: 16rpx;
}
.mine-head--login{
  color: #333;
  font-size: 40rpx;
  background: none;
}
.mine-head--login>.iconfont{
  font-weight: 400;
}
/* 订单信息 */
.mine-order{
  width: 686rpx;
  height: 232rpx;
  background: #ffffff;
  border-radius: 10rpx;
  margin: 0 auto 0 auto;
  box-shadow: 0 0 21rpx 0 rgba(11,19,14,0.11);
  position: absolute;
  bottom: -50rpx;
  left: 30rpx;
}
.mine-order--title {
  width: 100%;
  padding: 23rpx 22rpx 16rpx 29rpx;
  margin-bottom: 23rpx;
  border-bottom: 1rpx solid #F5F7FA;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.mine-order--all {
  display: flex;
  align-items: center;
}
.mine-order--all text {
  font-size: 24rpx;
  color: #666;
}
.mine-order--all icon {
  font-size: 24rpx;
  color: #666;
  line-height: 128rpx;
  margin-left: 10rpx;
}
.mine-order--name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.mine-order--description {
  color: #8e8e8e;
  font-size: 26rpx;
}
.mine-order--description icon {
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 18rpx;
  transform: translateY(-8rpx);
}
.mine-order--type {
  display: flex;
}
.mine-order--item {
  position: relative;
  flex: 1;
  text-align: center;
}
.mine-order--item__name {
  color: #222;
  font-size: 26rpx;
  margin-top: 6rpx;
}
.mine-order--num {
  position: absolute;
  z-index:1;
  top: -13rpx;
  right: 30rpx;
  min-width: 44rpx;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 20rpx;
  border-radius: 16rpx;
  text-align: center;
  color: #179C70;
  border: 3rpx solid #179C70;
  background: #fff;
}
.order-img {
  width: 50rpx;
  height: 50rpx;
}
.banner-box {
  margin:22rpx auto 0 auto;
  width: 686rpx;
  height: 267rpx;
  border-radius:20px;
  box-shadow:0 0 21rpx 0 rgba(11,19,14,0.11);
}
.option-item{
  border-radius:20px;
  margin: 0 30rpx 20rpx 30rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(12,1,0,0.05); 
}
.nav-cell{
  border-radius: 10rpx!important;
}
.scene-title{
  padding: 30rpx;
  text-align: center;
}
.scene-title text {
  color: #F51818;
}
.van-cell__title {
  color: #333 !important;
  font-size: 30rpx !important;
}
.cell-index--van-cell__left-icon {
  width: auto !important;
  height: auto !important;
}