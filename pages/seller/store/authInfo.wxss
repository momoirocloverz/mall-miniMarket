/*弹窗主体*/
.modal-content {
	position: fixed;
	bottom: -600rpx;
	left: 0;
	width: 100%;
	height: 600rpx;
	background: #fff;
	z-index: 999;
  border-radius: 26rpx 26rpx 0 0;
}

/*遮罩层*/
.modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: .4;
    z-index: 99;
}

/*弹窗头部*/
.modal-header {
	padding: 8rpx 26rpx;
	font-size: 32rpx;
	color: #666;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	line-height: 60rpx;
  border-radius: 26rpx 26rpx 0 0;
}

/*所在地区字样*/
.modal-title {
	text-align: left;
	width: 100%;
}

/*关闭按钮*/
.modal-close {
	width: 22rpx;
	height: 22rpx;
  transform: translateY(-20rpx);
}

.modal-body {
	font-size: 28rpx;
}

/*每级地区标题*/
.viewpager-title {
	padding: 0 26rpx;
	font-size: 30rpx;
	line-height: 60rpx;
}

/*分隔线*/
.viewpager-divider {
	width: 100%;
	height: 1rpx;
	background: #ccc;
}

/*左右滑动控件*/
.swiper-area {
	height:405rpx;
}

/*地址列表ListView容器*/
.viewpager-listview {
	padding: 10rpx 0 20rpx;
	height: 100%;
}

/*每行地址item项*/
.viewpager-listview view{
	line-height: 60rpx;
	padding: 10rpx 26rpx;
  font-size: 30rpx;
}

/*高亮当前所选地区*/
.area-selected {
	color: #00B996;
}

/*初始隐藏*/
.hidden {
	display: none;
}

/*运行时显示*/
.show {
	display: block;
}
page {
	position: relative;
