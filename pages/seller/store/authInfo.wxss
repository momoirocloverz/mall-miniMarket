.container {
  width: 100%;
  min-height: 100vh;
  background: #F5F7FA;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}
.store-body {
  width: 100%;
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.store-body .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 98rpx;
  line-height: 98rpx;
  width: 100%;
  border-bottom: 1rpx solid #F5F7FA;
}
.store-body .id-card {
  height: 272rpx;
  line-height: 272rpx;
}
.store-body .item label {
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
  margin-right: 20rpx;
  white-space: nowrap;
}
.store-body .item text {
  width: 480rpx;
  text-align: right;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: auto;
}
.store-body .item image {
  width: 14rpx;
  height: 24rpx;
  margin-left: 15rpx;
}
.store-body .id-card image {
  width: 324rpx;
  height: 222rpx;
  margin: 0;
}
.release {
  width: 550rpx;
  height: 88rpx;
  background: #D2D2D2;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 88rpx;
  border-radius: 88rpx;
  margin: 50rpx auto 40rpx auto;
}
.id-card-upload {
  width: 324rpx;
  height: 222rpx;
}
.contact-content {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  line-height: 50rpx;
  padding-bottom: 50rpx;
}
.cont-item {
  border-bottom: 1rpx solid #F5F7FA;
  padding: 34rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cont-item text:first-child {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
}
.cont-item .value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.cont-item .value text:first-child {
  width: 420rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 10rpx;
}
.cont-item .value image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
