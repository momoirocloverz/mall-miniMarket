<!--pages/seller/store/mainImage.wxml-->
<view class="container">
  <view class="add-image">
    <text>修改背面照片</text>
    <van-uploader
      file-list="{{headList}}"
      bind:after-read="afterRead"
      deletable
      imageFit="aspectFill"
      preview-size="220rpx"
      bind:delete="deletImg"
      max-count="1"
    >
      <view class="add-area">
        <text class="add-icon">+</text>
        <text>添加照片</text>
      </view>
    </van-uploader>
  </view>
  <view class="save" catchtap="submit">保存</view>
</view>
