.container {
  min-height: 100vh;
  width: 100%;
  background-color: #F5F7FA;
  overflow-x: hidden;
}

.store-head {
  width: 100%;
  min-height: 455rpx;
  padding: 34rpx 32rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}

.store-head .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.store-head .name {
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
}

.store-head .number {
  color: #666;
  font-size: 28rpx;
  font-weight: 400;
}

.store-head>textarea {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  font-size: 30rpx;
  height: 110rpx;
}

.title-text {
  margin-top: 30rpx;
  width: 100%;
  font-size: 30rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  background: #f5f7fa;
  margin: 35rpx 0 35rpx 0;
}

.add-image {
  display: flex;
  flex-wrap: wrap;
  position: relative;
}

.image-item {
  margin-right: 10rpx;
  width: 220rpx;
  height: 220rpx;
  border-radius: 5rpx;
  background: #f1f1f1;
  margin-bottom: 10rpx;
  position: relative;
}

.add-image image:nth-child(1) {
  width: 100%;
  height: 100%;
}

.add-image image:nth-child(2) {
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  right: -10rpx;
  top: -10rpx;
  z-index: 10;
}

.add-image .image-item:nth-child(3n) {
  margin-right: 0;
}

.add-area {
  width: 210rpx;
  height: 210rpx;
  background: url('https://img.hzanchu.com/acimg/d5fce742893a74f4584f311fc369f1ea.png') no-repeat;
  background-position: center;
  background-size: 100% 100%;
}

.id-card .van-uploader {
  position: static;
}

.id-card .van-uploader__preview {
  margin: 0;
}

.id-card .van-uploader__preview image {
  width: 324rpx !important;
  height: 222rpx !important;
  border-radius: 10rpx !important;
}

.id-card .van-uploader__upload {
  position: absolute;
  top: 0;
  left: 0;
  background-color: transparent;
  width: 324rpx !important;
  height: 222rpx !important;
}

.id-card .van-uploader__upload:active {
  background-color: transparent;
}

.store-body {
  width: 100%;
  margin-top: 20rpx;
}

.store-body .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 98rpx;
  min-height: 98rpx;
  line-height: 98rpx;
  width: 100%;
  border-bottom: 1rpx solid #F5F7FA;
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.store-body .item>input {
  font-size: 30rpx;
}

.store-body .item.address {
  height: auto;
  min-height: 98rpx;
  line-height: 40rpx;
  padding: 20rpx 30rpx;
  align-items: flex-start;
}

.store-body .id-card {
  height: 272rpx;
  line-height: 272rpx;
}

.store-body .item label {
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
  margin-right: 20rpx;
  white-space: nowrap;
}

.store-body .item input {
  flex: 1;
  text-align: right;
}

.store-body .item>view {
  display: flex;
  align-items: center;
  color: #ccc;
  font-size: 30rpx;
  flex: 1;
}

.store-body .item>.address-able {
  text-align: right;
  color: #333;
  justify-content: flex-end;
}

.store-body .item text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: right;
}

.store-body .item image {
  width: 14rpx;
  height: 24rpx;
  margin-left: 15rpx;
}

.store-body .id-card image {
  width: 324rpx;
  height: 222rpx;
  margin: 0;
}

.release {
  width: 550rpx;
  height: 88rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 88rpx;
  margin: 50rpx auto 40rpx auto;
}

.release button {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border: none !important;
  color: #333 !important;
  line-height: 88rpx;
}

.id-card-upload {
  height: 222rpx;
}

.license-upload {
  position: relative;
  width: 324rpx;
  height: 222rpx;
}

.id-card-front {
  background-image: url('https://img.hzanchu.com/acimg/14d1d757696af109f1add3fc67d3ac63.png?x-oss-process=image/resize,l_222,w_324');
  background-size: 100% 100%;
}

.id-card-back {
  background-image: url('https://img.hzanchu.com/acimg/40c1031c9ad5596478fe713a2f94d645.png?x-oss-process=image/resize,l_222,w_324');
  background-size: 100% 100%;
}

.license-license {
  background-image: url('https://img.hzanchu.com/acimg/bd05d0b8d8195002ed97975a1ac22f18.png?x-oss-process=image/resize,l_222,w_324');
  background-size: 100% 100%;
}

.contact-content {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  line-height: 50rpx;
  padding-bottom: 50rpx;
}

.contact-content view {
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
}

.contact-content text {
  color: #00BFFF;
}

/*弹窗主体*/
.modal-content {
  position: fixed;
  bottom: -600rpx;
  left: 0;
  width: 100%;
  height: 600rpx;
  background: #fff;
  z-index: 999;
  border-radius: 26rpx 26rpx 0 0;
}

/*遮罩层*/
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: .4;
  z-index: 99;
}

/*弹窗头部*/
.modal-header {
  padding: 8rpx 26rpx;
  font-size: 32rpx;
  color: #666;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  line-height: 60rpx;
  border-radius: 26rpx 26rpx 0 0;
}

/*所在地区字样*/
.modal-title {
  text-align: left;
  width: 100%;
}

/*关闭按钮*/
.modal-close {
  width: 26rpx;
  height: 26rpx;
  transform: translateY(-20rpx);
}

.modal-body {
  font-size: 28rpx;
}

/*每级地区标题*/
.viewpager-title {
  padding: 0 26rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}

/*分隔线*/
.viewpager-divider {
  width: 100%;
  height: 1rpx;
  background: #ccc;
}

/*左右滑动控件*/
.swiper-area {
  height: 405rpx;
}

/*地址列表ListView容器*/
.viewpager-listview {
  padding: 10rpx 0 20rpx;
  height: 100%;
}

/*每行地址item项*/
.viewpager-listview view {
  line-height: 60rpx;
  padding: 10rpx 26rpx;
  font-size: 30rpx;
}

/*高亮当前所选地区*/
.area-selected {
  color: #00B996;
}

/*初始隐藏*/
.hidden {
  display: none;
}

/*运行时显示*/
.show {
  display: block;
}

page {
  position: relative;
  height: 100%;
}

.address-province {
  justify-content: flex-end;
  color: #333 !important;
}

.id-card .van-uploader__preview-image {
  width: 324rpx !important;
  height: 222rpx !important;
}

/*状态*/
.status-area {
  width: 100%;
  padding-bottom: 50rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 20rpx;
  text-align: center;
}

.status-img {
  width: 422rpx;
  margin: 0 auto 20rpx auto;
  padding-top: 46rpx;
}

.status-img image {
  width: 100%;
  height: 305rpx;
}

.status-audit,
.status-fail {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.status-fail view:last-child {
  color: #666666;
  font-weight: 400;
}

.time-cont {
  text-align: center;
  font-size: 26rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.time-cont text {
  color: #F76925;
}

.padding-name {
  padding-bottom: 20rpx;
}

/* 裁剪图片 */
.cropper-box {
  position: relative;
}

.cropper-cover {
  background: rgba(14, 13, 13, .8);
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1;
}

.cropper-submit {
  color: #ffffff;
}

.control-wrap {
  position: fixed;
  bottom: 50rpx;
  left: 0;
  z-index: 100000;
  height: 50rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #ffffff;
}

.item-choose-address {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.item-choose-black {
  color: #000;
  font-size: 30rpx;
}

